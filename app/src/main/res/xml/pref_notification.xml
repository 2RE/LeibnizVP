<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->
    <CheckBoxPreference
        android:key="notifications_new_message"
        android:title="@string/pref_title_new_message_notifications"
        android:summary="Zeigt eine Benachrichtigung, die dich um angegebene Uhrzeit erinnert, auf den Vertretungsplan zu schauen"
        android:defaultValue="false" />

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_ringtone"
        android:title="@string/pref_title_ringtone"
        android:ringtoneType="notification"
        android:defaultValue="content://settings/system/notification_sound" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <CheckBoxPreference
        android:dependency="notifications_new_message"
        android:key="notifications_new_message_vibrate"
        android:title="@string/pref_title_vibrate"
        android:defaultValue="false" />
    <ListPreference
        android:key="notifications_new_message_time_hour"
        android:dependency="notifications_new_message"
        android:title="Benachrichtigungsuhrzeit (Stunde)"
        android:defaultValue="7"
        android:entries="@array/pref_notifications_time_title_hour"
        android:entryValues="@array/pref_notifications_time_value_hour" />
    <ListPreference
        android:key="notifications_new_message_time_minute"
        android:dependency="notifications_new_message"
        android:title="Benachrichtigungsuhrzeit (Minute)"
        android:defaultValue="0"
        android:entries="@array/pref_notifications_time_title_minute"
        android:entryValues="@array/pref_notifications_time_value_minute" />
</PreferenceScreen>
