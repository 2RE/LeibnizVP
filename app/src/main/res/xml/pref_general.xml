        android:defaultValue="true" /-->

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="example_text"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1"
        android:maxLength="25" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="example_list"
        android:title="@string/pref_title_add_friends_to_messages"
        android:defaultValue="0"
        android:entries="@array/pref_example_list_titles"
        android:entryValues="@array/pref_example_list_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <ListPreference
        android:key="lehrer_liste"
        android:title="Lehrer (KÃ¼rzel)"
        android:defaultValue="0"
        android:entries="@array/pref_lehrer_liste"
        android:entryValues="@array/pref_lehrer_liste_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />
    <CheckBoxPreference
        android:key="welcomeScreenShownPref"
        android:defaultValue="false"
        android:visibility="invisible" />
    <CheckBoxPreference
        android:key="TutorialShownPref"
        android:defaultValue="false"
        android:visibility="invisible" />
    <CheckBoxPreference
        android:key="LehrerPref"
        android:defaultValue="false"
        android:visibility="invisible" />

    <Preference android:title="Abmelden">
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.dandddeveloper.leibnizvp"
            android:targetClass="com.dandddeveloper.leibnizvp.LoginActivity"
            />
    </Preference>

</PreferenceScreen>

