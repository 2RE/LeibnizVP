<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="pushnotifications_new_message"
        android:title="@string/pref_title_push_notifications"
        android:summary="Zeigt Push-Benachrichtigungen, die dich über News und neue verfügbare Vertretungspläne informieren"
        android:defaultValue="true" />

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->
    <RingtonePreference
        android:dependency="pushnotifications_new_message"
        android:key="pushnotifications_new_message_ringtone"
        android:title="@string/pref_title_ringtone"
        android:ringtoneType="notification"
        android:defaultValue="content://settings/system/notification_sound" />

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <CheckBoxPreference
        android:dependency="pushnotifications_new_message"
        android:key="pushnotifications_new_message_vibrate"
        android:title="@string/pref_title_vibrate"
        android:defaultValue="false" />
</PreferenceScreen>
