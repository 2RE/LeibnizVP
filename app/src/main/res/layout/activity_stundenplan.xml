<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.dandddeveloper.leibnizvp.Stundenplanactivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hilfe!"
        android:onClick="helpme"
        android:id="@+id/help"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dir wurde &quot;HTTP ERROR -1 null&quot; angezeigt?"
        android:id="@+id/schuelertitle"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="-Überprüfe deine Internetverbindung. Falls diese aus ist, bitte aktiviere sie und versuche es erneut. \n -Dieser Fehler kann auch erscheinen, wenn das Dokument zu lange zum laden gebraucht hat."
        android:id="@+id/schuelertext"
        android:visibility="gone"
        android:layout_below="@+id/schuelertitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
