<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dandddeveloper.leibnizvp">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.dandddeveloper.leibnizvp.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.dandddeveloper.leibnizvp.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <receiver android:name=".MyReceiver" />
        <receiver
            android:name=".GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.dandddeveloper.leibnizvp" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMNotificationIntentService" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".Frontpage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dandddeveloper.leibnizvp.Frontpage" />
        </activity>
        <activity
            android:name=".Vertretungsplanheuteactvity"
            android:label="@string/title_activity_vertretungsplanheuteactvity"
            android:parentActivityName=".Frontpage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dandddeveloper.leibnizvp.Frontpage" />
        </activity>
        <activity
            android:name=".Frontpage"
            android:label="@string/title_activity_frontpage">

        </activity>
        <activity
            android:name=".Vertretungsplanmorgenactivity"
            android:label="@string/title_activity_vertretungsplanmorgenactivity"
            android:parentActivityName=".Frontpage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dandddeveloper.leibnizvp.Frontpage" />
        </activity>
        <activity
            android:name=".Stundenplanactivity"
            android:label="@string/title_activity_stundenplanactivity"
            android:parentActivityName=".Frontpage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dandddeveloper.leibnizvp.Frontpage" />
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:parentActivityName=".Frontpage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dandddeveloper.leibnizvp.Frontpage" />
        </activity>
        <activity
            android:name=".LehrerplanActivity"
            android:label="@string/title_activity_lehrerplan"
            android:parentActivityName=".Frontpage">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.dandddeveloper.leibnizvp.Frontpage" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
